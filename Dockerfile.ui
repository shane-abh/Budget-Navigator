# Frontend UI Dockerfile
FROM node:20-alpine AS builder

WORKDIR /app

# Build arguments
ARG VITE_API_URL=http://localhost:8000
ENV VITE_API_URL=$VITE_API_URL

# 1. Copy package files
COPY ["ui/Tax RAG/package.json", "ui/Tax RAG/package-lock.json", "./"]

# 2. THE FIX: Use 'npm install' instead of 'npm ci'
# This is more forgiving for Windows-to-Linux transfers
RUN npm install

# 3. NUCLEAR OPTION: Manually install TypeScript globally to guarantee 'tsc' exists
RUN npm install -g typescript

# 4. Copy the source code
COPY ["ui/Tax RAG/", "./"]

# 5. Build
RUN npm run build

# --- Production Stage ---
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY ["ui/Tax RAG/nginx.conf", "/etc/nginx/conf.d/default.conf"]
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]